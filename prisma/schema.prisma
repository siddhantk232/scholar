// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model user {
  id              Int    @id @default(autoincrement())
  email           String @unique
  hashed_password String
  name            String
  kind            Role   @default(STUDENT)
}
